<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:up_second_part.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:AuthVM"
             x:Class="up_second_part.AuthView">
	<Grid RowDefinitions="30*, 20*, 20*, 15*, 15*">
		<TextBox Grid.Row="1" Text="{Binding Login}"></TextBox>
		<TextBox Grid.Row="2" Text="{Binding Password}"></TextBox>
		<Button Grid.Row="3" Command="{Binding LogIn}">Войти</Button>
		<Button Grid.Row="4" Command="{Binding LogInAsGuest}">Войти гостем</Button>
	</Grid>
</UserControl>
